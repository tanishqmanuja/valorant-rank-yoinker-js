{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "inputs": ["src/**/*", "pkg/**/*", "scripts/**"],
      "outputs": ["out/*"]
    },
    "test": {
      "inputs": [
        "src/**/*",
        "tests/**/*",
        "**/*.test.ts",
        "vitest.config.*",
        "tsconfig.json",
        "package.json"
      ],
      "outputs": [],
      "dependsOn": ["^test"]
    }
  }
}
